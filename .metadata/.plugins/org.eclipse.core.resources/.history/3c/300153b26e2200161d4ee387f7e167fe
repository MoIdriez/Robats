#ifndef GAMEPAD_H_
#define GAMEPAD_H_

class gamepad {
public:
	gamepad();
	gamepad(int gamepadNumber);
	gamepad(std::string gamepadPath);
	virtual ~gamepad();
private:
	int _fd;

	bool isFound();
	void openGamepad(std::string gamepadPath);
	bool sample();
};

#endif /* GAMEPAD_H_ */
