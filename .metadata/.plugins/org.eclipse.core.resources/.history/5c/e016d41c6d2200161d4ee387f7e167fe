#include "gamepad.h"

gamepad::gamepad() { open("/dev/input/js0"); }
gamepad::gamepad(std::string gamepadPath) { open(gamepadPath); }
gamepad::gamepad(int gamepadNumber) {
	std::stringstream sstm;
	sstm << "/dev/input/js" << gamepadNumber;
	open(sstm.str());
}

gamepad::~gamepad() {
	// TODO Auto-generated destructor stub
}

