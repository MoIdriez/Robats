#include <iostream>       // std::cout, std::endl
#include <thread>
#include <unistd.h>
using namespace std;

int x = 0;
class awesome {
public:
	awesome();
	void foo() {
		for(;;){
			cout<< x << endl;
			sleep(1);
		}
	}
};


int main() {
	awesome * aw = new awesome();
	thread first (aw->foo);
	for (int i=10; i>0; --i) {
		x = i;
	    sleep(1);
	  }
	first.join();
}
