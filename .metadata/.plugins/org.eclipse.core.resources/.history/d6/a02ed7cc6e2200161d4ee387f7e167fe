#ifndef GAMEPAD_H_
#define GAMEPAD_H_


#define GAMEPAD_DEVNAME "/dev/input/js0"
#define GP_EVENT_BUTTON         0x01    /* button pressed/released */
#define GP_EVENT_AXIS           0x02    /* joystick moved */
#define GP_EVENT_INIT           0x80    /* initial state of device */

struct js_event {
33	        unsigned int time;      /* event timestamp in milliseconds */
34	        short value;   /* value */
35	        unsigned char type;     /* event type */
36	        unsigned char number;   /* axis/button number */
37	};

class gamepad {
public:
	gamepad();
	gamepad(int gamepadNumber);
	gamepad(std::string gamepadPath);
	virtual ~gamepad();
private:
	int _fd;

	bool isFound();
	void openGamepad(std::string gamepadPath);
	bool sample();
};

#endif /* GAMEPAD_H_ */
