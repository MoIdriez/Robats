#ifndef GAMEPAD_H_
#define GAMEPAD_H_

#define GAMEPAD_DEVNAME "/dev/input/js0"
#define GP_EVENT_BUTTON         0x01    /* button pressed/released */
#define GP_EVENT_AXIS           0x02    /* joystick moved */
#define GP_EVENT_INIT           0x80    /* initial state of device */

struct gp_event {
	unsigned int time;      /* event timestamp in milliseconds */
	short value;   /* value */
	unsigned char type;     /* event type */
	unsigned char number;   /* axis/button number */
};

struct wwvi_js_event {
	int button[11];
	int stick_x;
	int stick_y;
};

class gamepad {
public:
	gamepad();
	virtual ~gamepad();
private:
	int _fd;

	bool isFound();
	void openGamepad(std::string gamepadPath);
	bool sample();
};

#endif /* GAMEPAD_H_ */
